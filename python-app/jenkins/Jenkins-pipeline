pipeline {
    agent {
        node { 
            label 'node01'
        } 
    }
    environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
        REGISTRY_NAME='mikolajkrol/python-app'
	}
    stages {
        stage('Build') {
            steps {
                dir('python-app') {
                    sh 'docker build -t $REGISTRY_NAME:$BUILD_NUMBER .'
                    sh 'docker save python-app:$BUILD_NUMBER > python-app.image'
                }
                
            }
        }
        stage('Login') {

			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
        stage('Push') {
			steps {
				sh 'docker push $REGISTRY_NAME:$BUILD_NUMBER'
			}
		}
    }
    post {
        always{
            sh 'docker logout'
        }
        success {
            archiveArtifacts 'python-app/python-app:$BUILD_NUMBER'
        }
        cleanup {
            cleanWs() // lub git clean -fdx
        }
    }
}