pipeline {
  agent {
     node { 
        label 'node01'
     } 
  }
  tools {
    maven 'maven-apache-3.8.4'
  }
  environment {
      MVN_WORKDIR = 'java-app'
  }
  stages {
    stage('Maven Package') {
      steps {
        dir('java-app'){
          sh 'mvn package'
        }
      }
    }
    stage('Run') {
      steps {
        sh 'java -jar $MVN_WORKDIR/target/my-app-1.0-SNAPSHOT.jar'
      }
    }
  }
  stage('Maven build') {
            agent {
                docker {
                    /*
                     * Reuse the workspace on the agent defined at top-level of
                     * Pipeline but run inside a container.
                     */
                    image 'maven:3.6-jdk-8'
                    reuseNode true
                }
            }
            steps {        
                sh 'clean install'
            }
            post {
                success {
                /* 
                 * Only worry about archiving the jar file 
                 * if the build steps are successful (this part may be not necessary)
                 */
                archiveArtifacts(artifacts: '**/target/*.jar', allowEmptyArchive: true)
                }
           }
        }
        stage('Build docker image') {
             steps {
                sh 'docker build -t ${IMAGE} . '
            }
        }
  post {
    always {
      dir('java-app'){
        step($class: 'JUnitResultArchiver', checksName: '', testResults: '**/surefire-reports/TEST-*.xml')
        step(followSymlinks: false, $class: 'ArtifactArchiver', artifacts: 'target/*.jar')
      }
    }
  }
}