pipeline {
  agent {
     node { 
        label 'node01'
     } 
  }
  tools {
    maven 'maven-apache-3.8.4'
  }
  environment {
      MVN_WORKDIR = 'java-app'
  }
  stages {
    stage('Maven Package') {
      steps {
        dir('java-app'){
          sh 'mvn package'
        }
      }
    }
    stage('Run') {
      steps {
        sh 'java -jar $MVN_WORKDIR/target/my-app-1.0-SNAPSHOT.jar'
      }
    }
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.5.0'
        }
      }
      steps {
        sh 'mvn clean install'
      }
    }
    stage('Docker Build') {
      agent any
      steps {
        sh 'docker build -t java-app-test:latest .'
      }
    }
  }
  post {
    always {
      dir('java-app'){
        step($class: 'JUnitResultArchiver', checksName: '', testResults: '**/surefire-reports/TEST-*.xml')
        step(followSymlinks: false, $class: 'ArtifactArchiver', artifacts: 'target/*.jar')
      }
    }
  }
}